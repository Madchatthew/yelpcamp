<%- include("../partials/header") %>

<div class="container mt-2">
    <header class="jumbotron">
        <h1>Enter a New Campground</h1>
        <hr class="my-4">
        <a class="btn btn-primary btn-sm" href="/campgrounds" role="button">Back to Campgrounds</a> <a class="btn btn-primary btn-sm" href="/" role="button">Back to Home Page</a>
    </header>

    <div class="w-50 mx-auto">
        <form action="/campgrounds" method="POST">
            <div class="container">
                    
                <div class="form-group">
                    <input class="form-control form-control-md" type="text" name="name" placeholder="Enter Name of Campground">
                    </div>

                <div class="form-group">
                    <input class="form-control form-control-md" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>

                <div class="form-group">
                    <input class="form-control form-control-md" type="text" name="image" placeholder="Enter Image URL">
                </div>

                <div class="form-group">
                    <input class="form-control form-control-md" type="text" name="description" placeholder="Enter a Description">
                </div>

                <input type="submit" class="btn btn-primary btn-block btn-md w-50 mx-auto" value="Submit">

            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>