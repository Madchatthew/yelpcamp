<%- include("../partials/header") %>

<div class="container mt-2">
    <header class="jumbotron">
        <h1>Edit <%= campground.name %></h1>
        <hr class="my-4">
        <a class="btn btn-primary btn-sm" href="/campgrounds" role="button">Back to Campgrounds</a> <a class="btn btn-primary btn-sm" href="/" role="button">Back to Home Page</a>
    </header>

    <div class="w-50 mx-auto">
        <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
            <div class="container">

                    <div class="form-group">
                        <input class="form-control form-control-md" type="text" name="campground[name]" value="<%= campground.name %>">
                    </div>

                    <div class="form-group">
                        <input class="form-control form-control-md" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                    </div>
    

                    <div class="form-group">
                        <input class="form-control form-control-md" type="text" name="campground[image]" value="<%= campground.image %>">
                    </div>

                    <div class="form-group">
                        <input class="form-control form-control-md" type="text" name="campground[description]" value="<%= campground.description %>">
                    </div>

                    <input type="submit" class="btn btn-primary btn-block btn-md w-50 mx-auto" value="Submit">

            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>